@using System.Data;
@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}
<h2>
@Html.ActionLink("CreateNewUser", "Create", "User", new { @class = "btn btn-dark" })</h2>
                      
<div class="container-fluid">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Name</th>
                <th>Mobile</th>
                <th>Organization</th>
                <th>Address</th>
                <th>Email</th>
                <th>Location</th>
                <th>Photograph</th>


            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["UserId"]</td>
                    <td>@row["Name"]</td>
                    <td>@row["Mobile"]</td>
                    <td>@row["Organizatin"]</td>
                    <td>@row["Address"]</td>
                    <td>@row["Email"]</td>
                    <td>@row["Location"]</td>
                    <td>@row["Photograph"]</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = row["UserId"] }, new { @class = "btn btn-dark" })
                        &nbsp;&nbsp;
                        @Html.ActionLink("Update", "Update", new { id = row["UserId"] }, new { @class = "btn btn-dark" })
                        &nbsp;&nbsp;
                        @Html.ActionLink("delete", "Delete", new { id = row["UserId"] }, new { @class = "btn btn-dark" })
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>

